{
  "manifest_version": 2,
 
  "name": "Forum Fixer",
  "version": "1.0.0",
  "description": "Prune lame forum content and mask ignored users",
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": [
	"https://*/*",
	"http://*/*"
	],
    "run_at": "document_idle"
    
  }]
 
}